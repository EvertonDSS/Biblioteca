@model IEnumerable<Biblioteca.Web.Models.LivroModel>

<form>
    <div class="container row">
        @foreach (var livro in Model) {
            <div class="col-4">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="@livro.ImageUrl" height="100%" class="card-img-top"></img>
                        <div class="card-body">
                            <h3 class="bard-title text-success">@livro.Titulo</h3>
                            <span style="color: black; text-transform: capitalize" class="badge badge-light mb-2">@livro.Autor</span>
                           
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size:23px">Disponível: @livro.Quantidade</span>
                                </div>
                                <div class="col">
                                    <a asp-action="" asp-route-id="@livro.Id" class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
