@model IEnumerable<Biblioteca.Web.Models.LivroModel>

    <br />
    <br />

   <div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de livros</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="LivroCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Adicionar livro
            </a>
        </div>
         </div>
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Genero</th>
                <th>Autor</th>
                <th>Quantidade</th>
            </tr>
        </thead>
        <tbody>
             @foreach (var item in Model) {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Genero</td>
                    <td>@item.Autor</td>
                    <td>@item.Quantidade</td>
                    <td>
                        <a asp-action="LivroUpdate" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        @if(User.IsInRole("Admin")){
                            <a asp-action="LivroDelete" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>