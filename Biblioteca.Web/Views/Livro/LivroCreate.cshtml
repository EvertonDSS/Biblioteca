@model Biblioteca.Web.Models.LivroModel

    
<form asp-action="LivroCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Livro</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>


            <div class="col-2">
                <label asp-for="Titulo" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger" />
            </div>

            <div class="col-2">
                <label asp-for="Genero" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger" />
            </div>

            <div class="col-2">
                <label asp-for="Autor" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Autor" class="form-control" row="5" />
                <span asp-validation-for="Autor" class="text-danger" />
            </div>

            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Descricao" class="form-control" />
            </div>

               <div class="col-2">
                <label asp-for="Editora" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Editora" class="form-control" />
                <span asp-validation-for="Editora" class="text-danger" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size=20px">Ano Publicacao</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="AnoPublicacao" class="form-control" />
                <span asp-validation-for="AnoPublicacao" class="text-danger" />
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger" />
            </div>

            <div class="col-2">
                <label asp-for="Quantidade" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="LivroIndex" class="btn-primary btn form-control">Back to List </a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control">
            </div>


        </div>
    </div>


</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
